<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".ui.a.StartUp">

    <com.google.android.material.textview.MaterialTextView
        app:layout_constraintBottom_toBottomOf="@id/buttonA"
        app:layout_constraintEnd_toStartOf="@id/buttonC"
        app:layout_constraintTop_toTopOf="@id/buttonA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0"
        tools:text="@tools:sample/full_names"
        style="@style/TextAppearance.Medium"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:id="@+id/titleTextView"
        android:layout_marginEnd="6dp"
        android:layout_width="0dp"
        android:textSize="11.5sp"
        tools:ignore="SmallSp" />

    <com.google.android.material.button.MaterialButton
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/Theme.Button.Outlined"
        android:layout_marginEnd="20dp"
        android:layout_height="48dp"
        android:layout_width="42dp"
        android:id="@+id/buttonA"
        android:padding="0dp"
        android:text="@string/info_mark"
        tools:text="\?" />

    <com.google.android.material.button.MaterialButton
        app:layout_constraintEnd_toStartOf="@id/buttonA"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Theme.Button.Outlined"
        android:layout_marginEnd="4dp"
        android:layout_height="48dp"
        android:layout_width="42dp"
        android:textAllCaps="false"
        android:id="@+id/buttonB"
        android:padding="0dp"
        tools:text="54" />

    <com.google.android.material.button.MaterialButton
        app:layout_constraintEnd_toStartOf="@id/buttonB"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Theme.Button.Outlined"
        app:icon="@drawable/ic_refresh"
        android:layout_marginEnd="4dp"
        android:layout_height="48dp"
        android:layout_width="42dp"
        app:iconGravity="textStart"
        android:id="@+id/buttonC"
        app:iconPadding="0dp"
        app:iconSize="20dp" />

    <ProgressBar
        app:layout_constraintBottom_toBottomOf="@id/buttonC"
        app:layout_constraintStart_toStartOf="@id/buttonC"
        app:layout_constraintTop_toTopOf="@id/buttonC"
        app:layout_constraintEnd_toEndOf="@id/buttonC"
        android:indeterminateTint="?colorPrimary"
        style="?android:progressBarStyle"
        android:id="@+id/progressBar"
        android:indeterminate="true"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:padding="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/buttonA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/recycler_item_b"
        app:layout_constraintVertical_bias="0"
        android:layout_width="match_parent"
        android:paddingHorizontal="20dp"
        tools:orientation="horizontal"
        android:id="@+id/recyclerView"
        android:paddingVertical="6dp"
        android:layout_height="240dp"
        android:clipToPadding="false"
        tools:itemCount="3" />

</androidx.constraintlayout.widget.ConstraintLayout>